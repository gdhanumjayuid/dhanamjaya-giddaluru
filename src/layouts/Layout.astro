---
import '../styles/theme.css';
const pathname = Astro.url.pathname;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
		<title>Dhanamjaya Giddaluru</title>
	</head>
	<body>
		<header class="site-header">
			<nav class="nav" aria-label="Primary">
				<a class={`brand ${pathname === '/' ? 'active' : ''}`} aria-current={pathname === '/' ? 'page' : undefined} href="/">Dhanamjaya Giddaluru</a>
				<ul class="tabs" role="list">
					<li><a class={`${pathname.startsWith('/projects') ? 'active' : ''}`} aria-current={pathname.startsWith('/projects') ? 'page' : undefined} href="/projects">Projects</a></li>
					<li><a class={`${pathname.startsWith('/about') ? 'active' : ''}`} aria-current={pathname.startsWith('/about') ? 'page' : undefined} href="/about">About</a></li>
					<li><a class={`${pathname.startsWith('/resume') ? 'active' : ''}`} aria-current={pathname.startsWith('/resume') ? 'page' : undefined} href="/resume">Resume</a></li>
				</ul>
				<div class="social">
					<a href="https://www.linkedin.com/in/dhanamjayag/" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn" class="icon">
